<div id="notificationsContainer">
	<div id="notificationsBody" class="notifications">
		<%= @notifications_count %>
	</div>
	<div id="notificationsFooter">
		<%= l(:label_alerts) %>
	</div>
</div>

<% content_for :header_tags do %>
	<%= javascript_include_tag "notifications", :plugin => "redmine_alert_issue" %>
	<%= stylesheet_link_tag "notifications", :plugin => "redmine_alert_issue" %>
<% end %>